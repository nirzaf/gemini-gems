---
import fs from "node:fs";
import path from "node:path";
import matter from "gray-matter";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { ArrowLeft, Copy, Download } from "lucide-astro";
import { marked } from "marked";

export async function getStaticPaths() {
  const gemsDir = path.join(process.cwd(), "src", "content", "gems");
  const gemFiles = fs
    .readdirSync(gemsDir)
    .filter((file) => file.endsWith(".md"));

  return gemFiles.map((file) => {
    const slug = file.replace(/\.md$/, "");
    const filePath = path.join(gemsDir, file);
    const source = fs.readFileSync(filePath, "utf-8");
    const { data, content } = matter(source);

    return {
      params: { slug },
      props: {
        gem: {
          slug,
          title: data.title,
          description: data.description,
          category: data.category,
          icon: data.icon,
          color: data.color,
          features: data.features ?? [],
          content,
          lastUpdated: data.lastUpdated ?? null,
        },
      },
    };
  });
}

interface Props {
  gem: any;
}

const { gem } = Astro.props;
const contentHtml = marked.parse(gem.content);

const features = Array.isArray(gem.features)
  ? gem.features
  : (() => {
      try {
        return JSON.parse(gem.features);
      } catch {
        return [];
      }
    })();

// Map category to gradient colors
const categoryColors: Record<string, string> = {
  Education: "from-blue-500 to-blue-600",
  Development: "from-blue-600 to-cyan-600",
  Business: "from-green-500 to-green-600",
  Creative: "from-amber-500 to-amber-600",
  Spiritual: "from-emerald-500 to-emerald-600",
  Lifestyle: "from-orange-500 to-orange-600",
  Finance: "from-green-500 to-green-600",
  Wellness: "from-teal-500 to-teal-600",
};

const categoryGradient =
  categoryColors[gem.category] || "from-gray-500 to-gray-600";
---

<Layout
  title={`${gem.title} - Gemini Gems`}
  description={gem.description}
>
  <Header />

  <!-- Gem Detail Section -->
  <section
    class="py-8 bg-[#0f1419] min-h-screen transition-colors duration-300"
  >
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Back Button -->
      <a
        href="/"
        class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 mb-6 font-semibold transition-colors"
      >
        <ArrowLeft class="w-4 h-4" />
        Back to Gems
      </a>

      <!-- Gem Header -->
      <div
        class={`bg-gradient-to-r ${categoryGradient} text-white rounded-2xl p-6 mb-6 shadow-xl`}
      >
        <div class="flex items-center mb-4">
          <h1 class="text-3xl md:text-4xl font-bold">{gem.title}</h1>
        </div>
        <p class="text-lg mb-4 opacity-90">{gem.description}</p>
        <div class="flex flex-wrap gap-2">
          <span
            class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm font-semibold"
          >
            {gem.category}
          </span>
          {
            features.map((feature: string) => (
              <span class="px-3 py-1 bg-white bg-opacity-10 rounded-full text-xs">
                {feature}
              </span>
            ))
          }
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 mb-6">
        <button
          id="copyButton"
          data-gem-slug={gem.slug}
          class="flex-1 bg-gradient-to-r from-emerald-600 to-green-600 text-white px-6 py-3 rounded-xl font-bold hover:from-emerald-700 hover:to-green-700 transition-all transform hover:scale-105 shadow-lg inline-flex items-center justify-center gap-2"
        >
          <Copy class="w-5 h-5" />
          Copy System Prompt
        </button>
        <a
          href={`https://raw.githubusercontent.com/nirzaf/gemini-gems/main/src/content/gems/${gem.slug}.md`}
          target="_blank"
          class="flex-1 bg-gradient-to-r from-blue-700 to-cyan-600 text-white px-6 py-3 rounded-xl font-bold hover:from-blue-800 hover:to-cyan-700 transition-all transform hover:scale-105 shadow-lg inline-flex items-center justify-center gap-2"
        >
          <Download class="w-5 h-5" />
          Download File
        </a>
      </div>

      <!-- Gem Content -->
      <div
        class="prose prose-lg max-w-none bg-white dark:bg-gray-800 rounded-xl p-6 border shadow-sm"
        set:html={contentHtml}
      >
      </div>
    </div>
  </section>

  <Footer />

  <!-- Toast Notification -->
  <div
    id="toast"
    class="fixed bottom-6 right-6 bg-gradient-to-r from-emerald-500 to-green-500 text-white px-8 py-4 rounded-2xl shadow-2xl z-50 backdrop-blur-sm transform translate-y-32 opacity-0 transition-all duration-300"
  >
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"></path>
      </svg>
      <span class="font-semibold text-lg">Content copied to clipboard!</span>
    </div>
  </div>

  <script>
    document
      .getElementById("copyButton")
      ?.addEventListener("click", async () => {
        try {
          const button = document.getElementById("copyButton");
          const slug = button?.getAttribute("data-gem-slug");

          if (!slug) {
            throw new Error("Gem slug not found");
          }

          // Fetch content from local static JSON API
          const base = import.meta.env.BASE_URL.replace(/\/$/, "");
          const response = await fetch(`${base}/api/content/${slug}.json`);

          if (!response.ok) {
            throw new Error("Failed to fetch content");
          }

          const data = await response.json();

          // Copy raw markdown to clipboard
          await navigator.clipboard.writeText(data.content);

          // Show toast notification
          const toast = document.getElementById("toast");
          if (toast) {
            toast.classList.remove("translate-y-32", "opacity-0");
            toast.classList.add("translate-y-0", "opacity-100");
            setTimeout(() => {
              toast.classList.add("translate-y-32", "opacity-0");
              toast.classList.remove("translate-y-0", "opacity-100");
            }, 3000);
          }
        } catch (err) {
          console.error("Failed to copy:", err);
          alert("Failed to copy to clipboard. Please try again.");
        }
      });
  </script>
</Layout>
