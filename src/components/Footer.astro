---
import { Gem, Github, GitFork, Sparkles } from "lucide-astro";

interface Props {
  gemCount?: number;
  categoryCount?: number;
}

const { gemCount, categoryCount }: Props = Astro.props;
---

<footer class="bg-gradient-to-r from-gray-900 to-gray-800 text-white py-16">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <p class="text-gray-200 mb-4 text-base md:text-lg max-w-2xl mx-auto leading-relaxed">
        ðŸš€ Supercharge your AI with expert prompts. âœ¨ Transform Gemini into
        specialized assistants with ready-to-use professional prompts.
      </p>
      <a
        href="/#gems"
        class="btn-primary text-sm px-5 py-2 inline-flex items-center justify-center gap-2"
      >
        <Sparkles class="w-4 h-4" />
        Explore Gems
      </a>
      {
        typeof gemCount === "number" &&
        typeof categoryCount === "number" && (
          <div
            class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-4 text-center max-w-3xl mx-auto"
          >
            <div class="stats-card p-4 rounded-xl shadow-sm">
              <div
                class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent mb-1"
              >
                {gemCount}
              </div>
              <div class="text-gray-300 font-semibold text-xs uppercase tracking-wide">
                Gems
              </div>
            </div>
            <div class="stats-card p-4 rounded-xl shadow-sm">
              <div
                class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-teal-400 to-emerald-400 bg-clip-text text-transparent mb-1"
              >
                {categoryCount}
              </div>
              <div class="text-gray-300 font-semibold text-xs uppercase tracking-wide">
                Categories
              </div>
            </div>
            <div class="stats-card p-4 rounded-xl shadow-sm">
              <div
                class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-slate-300 to-gray-200 bg-clip-text text-transparent mb-1"
              >
                100%
              </div>
              <div class="text-gray-300 font-semibold text-xs uppercase tracking-wide">
                Open Source
              </div>
            </div>
          </div>
        )
      }
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div>
        <h3 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <Gem class="w-8 h-8" />
          Gemini Gems
        </h3>
        <p class="text-gray-300 mb-6 text-lg leading-relaxed">
          A community-driven collection of specialized AI personas for Google's
          Gemini models.
        </p>
        <div class="flex space-x-6">
          <a
            href="https://github.com/nirzaf/gemini-gems"
            target="_blank"
            class="text-gray-300 hover:text-white transition-colors transform hover:scale-110"
          >
            <Github class="w-8 h-8" />
          </a>
        </div>
      </div>
      <div>
        <h4 class="text-xl font-bold mb-6">Quick Links</h4>
        <ul class="space-y-4">
          <li>
            <a
              href="/#gems"
              class="text-gray-300 hover:text-white transition-colors text-lg hover:underline"
              >Browse Gems</a>
          </li>
          <li>
            <a
              href="https://github.com/nirzaf/gemini-gems/blob/main/README.md"
              target="_blank"
              class="text-gray-300 hover:text-white transition-colors text-lg hover:underline"
              >Documentation</a>
          </li>
          <li>
            <a
              href="https://github.com/nirzaf/gemini-gems/issues"
              target="_blank"
              class="text-gray-300 hover:text-white transition-colors text-lg hover:underline"
              >Report Issues</a>
          </li>
          <li>
            <a
              href="https://github.com/nirzaf/gemini-gems/blob/main/CODE_OF_CONDUCT.md"
              target="_blank"
              class="text-gray-300 hover:text-white transition-colors text-lg hover:underline"
              >Code of Conduct</a>
          </li>
        </ul>
      </div>
      <div>
        <h4 class="text-xl font-bold mb-6">Contribute</h4>
        <p class="text-gray-300 mb-6 text-lg leading-relaxed">
          Help us grow this collection by contributing your own gems or
          improving existing ones.
        </p>
        <a
          href="https://github.com/nirzaf/gemini-gems/fork"
          target="_blank"
          class="bg-gradient-to-r from-blue-700 to-cyan-600 text-white px-8 py-3 rounded-xl hover:from-blue-800 hover:to-cyan-700 transition-all transform hover:scale-105 inline-flex items-center gap-2 font-bold shadow-lg"
        >
          <GitFork class="w-5 h-5" />
          Fork & Contribute
        </a>
      </div>
    </div>
    <div class="border-t border-gray-700 mt-12 pt-8 text-center">
      <p class="text-gray-300 text-lg">
        Â© 2025 Gemini Gems. Open source project under MIT License.
      </p>
      <div class="quadrate-powered mt-6 rounded-xl p-4">
        <a href="https://www.quadrate.lk" target="_blank" rel="noopener" class="font-bold text-white text-sm md:text-base">
          Powered by Quadrate Tech Solution
        </a>
      </div>
    </div>
  </div>
</footer>
